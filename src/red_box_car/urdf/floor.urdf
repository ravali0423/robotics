<?xml version="1.0"?>
<robot name="floor">

  <!-- Materials -->
  <material name="green">
    <color rgba="0 0.8 0 1"/>
  </material>

  <!-- Ground plane link -->
  <link name="base_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="20 20 0.02"/>
      </geometry>
      <material name="green"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="20 20 0.02"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="1000.0"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="1000.0" ixy="0.0" ixz="0.0" iyy="1000.0" iyz="0.0" izz="1000.0"/>
    </inertial>
  </link>

  <!-- Gazebo materials and physics properties -->
  <gazebo reference="base_link">
    <material>
      <ambient>0 0.8 0 1</ambient>
      <diffuse>0 0.8 0 1</diffuse>
    </material>
    <mu1>1.0</mu1>
    <mu2>1.0</mu2>
    <static>true</static>
  </gazebo>

</robot>