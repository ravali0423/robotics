<?xml version="1.0"?>
<window>
  <width>1400</width>
  <height>900</height>
  <style
    material_  <!-- Publisher Panel (Alternative Control) -->
  <plugin filename="Publisher" name="Manual Commands">
    <gz-gui>
      <title>Manual Robot Commands</title>
      <property type="bool" key="showTitleBar">true</property>
      <property type="bool" key="resizable">true</property>
      <property type="double" key="height">300</property>
      <property type="double" key="width">320</property>
      <property type="double" key="z">1</property>
      <property type="string" key="state">floating</property>
      <property type="double" key="x">400</property>
      <property type="double" key="y">50</property>
    </gz-gui>   material_primary="DeepOrange"
    material_accent="LightBlue"
    toolbar_color_light="#f3f3f3"
    toolbar_text_color_light="#111111"
    toolbar_color_dark="#414141"
    toolbar_text_color_dark="#f3f3f3"
    plugin_toolbar_color_light="#bbdefb"
    plugin_toolbar_text_color_light="#111111"
    plugin_toolbar_color_dark="#607d8b"
    plugin_toolbar_text_color_dark="#f3f3f3"
  />
  <menus>
    <drawer default="false">
    </drawer>
  </menus>

  <!-- Main 3D View -->
  <plugin filename="MinimalScene" name="3D View">
    <gz-gui>
      <title>Warehouse Robot Simulation</title>
      <property type="bool" key="showTitleBar">false</property>
      <property type="string" key="state">docked</property>
    </gz-gui>
    <engine>ogre2</engine>
    <scene>scene</scene>
    <ambient_light>0.6 0.6 0.6</ambient_light>
    <background_color>0.35 0.35 0.35</background_color>
    <camera_pose>-8 -8 8 0 0.4 0.785</camera_pose>
  </plugin>

  <!-- World Control Panel -->
  <plugin filename="WorldControl" name="World control">
    <gz-gui>
      <title>Simulation Control</title>
      <property type="bool" key="showTitleBar">true</property>
      <property type="bool" key="resizable">false</property>
      <property type="double" key="height">120</property>
      <property type="double" key="width">300</property>
      <property type="double" key="z">1</property>
      <property type="string" key="state">docked</property>
      <anchors target="3D View">
        <line own="left" target="left"/>
        <line own="bottom" target="bottom"/>
      </anchors>
    </gz-gui>
    <play_pause>true</play_pause>
    <step>true</step>
    <start_paused>false</start_paused>
    <service>/world/warehouse_world/control</service>
    <stats_topic>/world/warehouse_world/stats</stats_topic>
  </plugin>

  <!-- World Stats Panel -->
  <plugin filename="WorldStats" name="World stats">
    <gz-gui>
      <title>Simulation Stats</title>
      <property type="bool" key="showTitleBar">true</property>
      <property type="bool" key="resizable">false</property>
      <property type="double" key="height">120</property>
      <property type="double" key="width">350</property>
      <property type="double" key="z">1</property>
      <property type="string" key="state">docked</property>
      <anchors target="3D View">
        <line own="right" target="right"/>
        <line own="bottom" target="bottom"/>
      </anchors>
    </gz-gui>
    <sim_time>true</sim_time>
    <real_time>true</real_time>
    <real_time_factor>true</real_time_factor>
    <iterations>true</iterations>
    <topic>/world/warehouse_world/stats</topic>
  </plugin>

  <!-- Robot Teleop Controller (Primary Control) -->
  <plugin filename="Teleop" name="Robot Controller">
    <gz-gui>
      <title>ðŸŽ® Warehouse Robot Controller</title>
      <property type="bool" key="showTitleBar">true</property>
      <property type="bool" key="resizable">true</property>
      <property type="double" key="height">400</property>
      <property type="double" key="width">320</property>
      <property type="double" key="z">1</property>
      <property type="string" key="state">floating</property>
      <property type="double" key="x">50</property>
      <property type="double" key="y">50</property>
    </gz-gui>
    <topic>/model/warehouse_car/cmd_vel</topic>
    <max_linear_velocity>0.5</max_linear_velocity>
    <max_angular_velocity>1.0</max_angular_velocity>
  </plugin>

  <!-- Publisher Panel (Alternative Control) -->
  <plugin filename="Publisher" name="Manual Commands">
    <gz-gui>
      <title>ï¿½ Manual Robot Commands</title>
      <property type="bool" key="showTitleBar">true</property>
      <property type="bool" key="resizable">true</property>
      <property type="double" key="height">300</property>
      <property type="double" key="width">320</property>
      <property type="double" key="z">1</property>
      <property type="string" key="state">docked_collapsed</property>
      <anchors target="Robot Controller">
        <line own="right" target="right"/>
        <line own="bottom" target="bottom"/>
      </anchors>
    </gz-gui>
    <topic>/model/warehouse_car/cmd_vel</topic>
    <message_type>gz.msgs.Twist</message_type>
    <gz_msg_properties>
      <linear>
        <x>0.0</x>
        <y>0.0</y>
        <z>0.0</z>
      </linear>
      <angular>
        <x>0.0</x>
        <y>0.0</y>
        <z>0.0</z>
      </angular>
    </gz_msg_properties>
  </plugin>

  <!-- Entity Tree -->
  <plugin filename="EntityTree" name="Entity tree">
    <gz-gui>
      <title>Entity Tree</title>
      <property type="bool" key="showTitleBar">true</property>
      <property type="string" key="state">docked_collapsed</property>
    </gz-gui>
  </plugin>

  <!-- Component Inspector -->
  <plugin filename="ComponentInspector" name="Component inspector">
    <gz-gui>
      <title>Component Inspector</title>
      <property type="bool" key="showTitleBar">true</property>
      <property type="string" key="state">docked_collapsed</property>
    </gz-gui>
  </plugin>

</window>