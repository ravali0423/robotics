<?xml version="1.0"?>
<robot name="red_box">

  <!-- Materials -->
  <material name="red">
    <color rgba="0.8 0 0 1"/>
  </material>

  <!-- Red box link -->
  <link name="base_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.3 0.3 0.3"/>
      </geometry>
      <material name="red"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.3 0.3 0.3"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="1.0"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="0.015" ixy="0.0" ixz="0.0" iyy="0.015" iyz="0.0" izz="0.015"/>
    </inertial>
  </link>

  <!-- Gazebo material properties -->
  <gazebo reference="base_link">
    <material>
      <ambient>0.8 0 0 1</ambient>
      <diffuse>0.8 0 0 1</diffuse>
      <specular>0.1 0.1 0.1 1</specular>
    </material>
    <mu1>0.7</mu1>
    <mu2>0.7</mu2>
  </gazebo>

</robot>